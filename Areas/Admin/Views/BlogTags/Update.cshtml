@model BlogTagsUpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update BlogTags</h6>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for="TagId">Tags</label>
                <select class="form-control" asp-for="TagId" asp-items='@new SelectList(ViewBag.Tags,"Id","Title")'>
                </select>
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogId">Blogs</label>
                <select class="form-control" asp-for="BlogId" asp-items='@new SelectList(ViewBag.Blogs,"Id","Title")'>
                </select>
                <span asp-validation-for="BlogId" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Submit</button>
            <button asp-action="Index" class="btn btn-cancel">Cancel</button>
        </form>
    </div>
</div>