@model BlogUpdateVM

@{
    ViewData["Title"] = "Update";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update Category</h6>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if (Model.AuthorId == null)
            {
                <div class="form-group">
                    <label asp-for="AuthorId">AuthorId</label>
                    <select class="form-control" asp-for="AuthorId" asp-items='@new SelectList(ViewBag.Authors,"Id","Name")'>
                        <option value="" selected>Select author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="AuthorId">AuthorId</label>
                    <select class="form-control" asp-for="AuthorId" asp-items='@new SelectList(ViewBag.Authors,"Id","Name")'>
                        <option value="">Select author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            }
            <div class="form-check">
                <input asp-for="IsDeleted" class="form-check-input">
                <label asp-for="IsDeleted" class="form-check-label">IsDeleted</label>
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <br>
            <button class="btn btn-success">Submit</button>
            <button asp-action="Index" class="btn btn-cancel">Cancel</button>
        </form>
    </div>
</div>